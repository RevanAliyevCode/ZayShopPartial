@section Scripts {
    <script>
        $(document).ready(function () {
            $('.category-link').click(function (e) {
                e.preventDefault();
                var categoryId = $(this).data('category-id');
                $.ajax({
                    url: '@Url.Action("GetProductsByCategory", "Shop")',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        $('#product-list').html(data);
                    }
                });
            });
        });
    </script>
}
