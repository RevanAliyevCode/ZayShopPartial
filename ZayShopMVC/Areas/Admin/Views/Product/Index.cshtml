@using ZayShopMVC.Areas.Admin.Models.Product
@model ProductVM

<div class="p-4">
    <a type="button" class="btn btn-primary mb-4" asp-controller="Product" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Stock</th>
                <th scope="col">Sizes</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="~/assets/img/@item.ImageName" alt="@item.Name" style="width: 100px; height: 100px;" />
                    </td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Stock</td>
                    <td>
                        @foreach (var size in item.Sizes)
                        {
                            <span>@size.Name</span>
                        }
                    </td>
                    <td class="d-flex">
                        <a type="button" class="btn btn-primary mr-3" asp-controller="Product" asp-action="Update"
                            asp-route-id="@item.Id">Update</a>
                        <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>