@using ZayShopMVC.Areas.Admin.Models.Slider
@model SliderVM

<div class="p-4">
    <a type="button" class="btn btn-primary mb-4" asp-controller="Slider" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Sort Order</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sliders)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="~/@item.ImageUrl" alt="@item.Title" style="width: 100px; height: 100px;" />
                    </td>
                    <td>@item.SortOrder</td>
                    <td class="d-flex">
                        <a type="button" class="btn btn-primary mr-3" asp-controller="Slider" asp-action="Update"
                            asp-route-id="@item.Id">Update</a>
                        <form asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>