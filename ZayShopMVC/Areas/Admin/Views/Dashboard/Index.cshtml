@using ZayShopMVC.Areas.Admin.Models.Category
@model CategoryVM

<div class="p-4">
    <a type="button" class="btn btn-primary mb-4" asp-controller="Dashboard" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Created</th>
                <th scope="col">Updated</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.UpdatedDate</td>
                    <td class="d-flex">
                        <a type="button" class="btn btn-primary mr-3" asp-controller="Dashboard" asp-action="Update"
                            asp-route-id="@item.Id">Update</a>
                        <form asp-controller="Dashboard" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>